extends ../layout 

block content 
  h1 #{title}: #{genre.name}

  if genre_books.length 
    p #[strong Delete the following books before attempting to delete this genre.] 

    .ms-3.mt-3 
      h4 Books 

      dl 
      each book in genre_books 
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary} 

  else 
    p Do you really want to delete this Genre?

    .mb-3.d-flex
      form(method='POST')
        input#genreid.form-control(
          type='hidden'
          name='genreid'
          required=true 
          value=genre._id
        )

        button.btn.btn-primary(type='submit') Delete

      a(href=genre.url).ms-3.btn.btn-danger Cancel